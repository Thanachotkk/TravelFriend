<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".RegisterGuideActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_register">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/user_profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_profile_image">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_name_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/imageView1"
                        android:layout_margin="10dp"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Name" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_surname_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Surname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Surname" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_email_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_2"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Email" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/imageView3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/ic_phone_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_3"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView3"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Phone" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_password_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_4"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView4"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Password"
                            android:inputType="textPassword" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_province_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_5"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView5"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_Province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="Province" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView6"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_district_24dp" />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/TextInputLayout_7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/TextInputLayout_6"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/imageView7"
                        android:background="@drawable/edittext_circle_bg">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_District"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:hint="District" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/imageView7"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/ic_age_24dp" />
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TextInputLayout_7"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-14dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imageView8"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="16dp"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_floatingLabelText="Select your Age"
                        app:ms_hint="Age"
                        app:ms_multiline="true" />

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView8"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:text="Gender :"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/spinner_age"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@id/tv_gender"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Female"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <TextView
                    android:id="@+id/tv_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gender"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="สำเนาใบรับรองประวัติพฤติกรรม :"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_certificate"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_upload_image" />

                    <ImageView
                        android:id="@+id/certificate_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_certificate"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageView9" />

                    <TextView
                    android:id="@+id/tv_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView9"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="สำเนาบัตรมัคคุเทศก์ :"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_license"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_upload_image" />

                    <ImageView
                        android:id="@+id/licence_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_license"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageView9" />

                    <TextView
                        android:id="@+id/tv_citizen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView10"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="สำเนาบัตรประชาชน :"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_citizen"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_upload_image" />

                    <ImageView
                        android:id="@+id/citizen_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_citizen"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/imageView9" />

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/citizen_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bt_border"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="24sp" />
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>